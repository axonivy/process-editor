{
  "private": true,
  "name": "@axonivy/process-editor-root",
  "version": "11.4.0-next",
  "engines": {
    "node": ">=20.19"
  },
  "volta": {
    "node": "24.11.0"
  },
  "scripts": {
    "ci": "npm install && npm run monaco-postinstall && npm run build && npm run type && npm run package && (npm run lint:ci || true) && npm run test:ci",
    "clean": "lerna run clean",
    "build": "tsc --build",
    "monaco-postinstall": "npm explore monaco-languageclient -- npm run postinstall",
    "package": "lerna run package",
    "type": "lerna run type",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "protocol:inscription": "npm run -w @axonivy/process-editor-inscription-protocol",
    "dev": "npm run -w @axonivy/process-editor-standalone dev",
    "dev:viewer": "npm run -w @axonivy/process-editor-viewer dev",
    "dev:eclipse": "npm run -w @axonivy/process-editor-eclipse dev",
    "dev:inscription": "npm run -w @axonivy/process-editor-inscription-standalone dev",
    "test": "vitest test",
    "test:ci": "vitest run --reporter=default --reporter=junit --outputFile=report.xml",
    "webtest": "npm run -w @axonivy/process-editor-playwright webtest",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws -t semver -u",
    "publish:next": "lerna publish --exact --canary --preid next --pre-dist-tag next --no-git-tag-version --no-push --ignore-scripts --yes"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~12.0.7-next.604",
    "@lerna-lite/cli": "^4.11.2",
    "@lerna-lite/publish": "^4.11.2",
    "@lerna-lite/run": "^4.11.2",
    "@lerna-lite/version": "^4.11.2",
    "@types/node": "^24.10.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.0.8"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "integration/*",
      "playwright"
    ]
  }
}
