{
  "private": true,
  "name": "@axonivy/process-editor-root",
  "version": "10.0.1",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "ci": "npm install && npm run build:icons && npm run build && npm run type && npm run package",
    "clean": "lerna run clean",
    "build": "tsc --build && tscp --build",
    "build:icons": "npm run -w @axonivy/process-editor build:icons",
    "package": "lerna run package",
    "type": "lerna run type",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "dev": "npm run -w @axonivy/process-editor-standalone dev",
    "dev:eclipse": "npm run -w @axonivy/process-editor-eclipse dev",
    "test": "npm run -w @axonivy/process-editor test",
    "test:ci": "npm run -w @axonivy/process-editor test:ci",
    "webtest": "npm run -w @axonivy/process-editor-standalone webtest"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@lerna-lite/cli": "^4.6.2",
    "@lerna-lite/run": "^4.6.2",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.21.0",
    "eslint-formatter-checkstyle": "^8.40.0",
    "eslint-plugin-playwright": "^2.1.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-cp": "^0.1.9",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.1.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vite-plugin-node-polyfills": "^0.24.0",
    "setimmediate": "^1.0.5"
  },
  "workspaces": {
    "packages": [
      "editor",
      "integration/standalone",
      "integration/eclipse"
    ]
  },
  "volta": {
    "node": "22.17.0"
  }
}
